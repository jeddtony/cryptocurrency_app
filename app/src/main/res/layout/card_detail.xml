<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/convert_currency"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/detail_linear"
        android:orientation="vertical"
        android:layout_width="276dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        android:layout_marginStart="54dp"
        app:layout_constraintLeft_toLeftOf="parent" >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/detail_country_flag"
            android:layout_width="200dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <TextView
        android:id="@+id/textView4"
        android:layout_width="132dp"
        android:layout_height="39dp"
        android:text="Enter amount"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_linear"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/inputValue"
        android:layout_width="199dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_linear"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Btc Value"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="37dp" />

    <TextView
        android:id="@+id/convert_btc_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="93dp"
        app:layout_constraintTop_toBottomOf="@+id/inputValue"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Eth Value"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="37dp" />

    <TextView
        android:id="@+id/convert_eth_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/convert_btc_value"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/calc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyCustomButton"
        android:text="Calculate"
        android:layout_marginTop="111dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_linear"
        android:layout_marginLeft="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        android:layout_marginStart="80dp" />
</android.support.constraint.ConstraintLayout>