<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="346dp"
        android:layout_height="415dp"
        android:layout_margin="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
            android:id="@+id/card_linear"
            android:orientation="vertical"
            android:layout_width="276dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            android:layout_marginStart="54dp"
            app:layout_constraintLeft_toLeftOf="parent" >

            <android.support.v7.widget.AppCompatImageView
            android:id="@+id/card_country_flag"
            android:layout_width="200dp"
            android:layout_height="100dp" />

            <TextView
            android:id="@+id/card_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
            android:id="@+id/card_eth_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="ETHEREUM"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/card_eth_value"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/card_btc_placeholder"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/card_btc_placeholder" />

            <TextView
                android:id="@+id/card_btc_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="TextView"
                android:layout_marginTop="75dp"
                app:layout_constraintTop_toBottomOf="@+id/card_linear"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="98dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/card_eth_placeholder"
                android:layout_marginLeft="8dp" />

            <TextView
            android:id="@+id/card_eth_value"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="TextView"
            android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/card_btc_value"
            android:layout_marginStart="54dp"
            app:layout_constraintRight_toRightOf="@+id/card_btc_value"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.027" />

            <TextView
            android:id="@+id/card_btc_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="75dp"
            android:text="BITCOIN"
                app:layout_constraintRight_toLeftOf="@+id/card_btc_value"
            app:layout_constraintTop_toBottomOf="@+id/card_linear"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                app:layout_constraintLeft_toLeftOf="@+id/card_linear"
                app:layout_constraintHorizontal_bias="0.327" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>