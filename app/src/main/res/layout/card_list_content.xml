<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/card_country_name"
        android:layout_width="276dp"
        android:layout_height="150dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/card_btc_placeholder"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:text="TextView"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/card_country_name"
        app:layout_constraintRight_toLeftOf="@+id/card_btc_value"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/card_btc_value"
        android:layout_width="141dp"
        android:layout_height="66dp"
        android:text="TextView"
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toBottomOf="@+id/card_country_name"
        android:layout_marginRight="54dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/card_eth_placeholder"
        android:layout_width="137dp"
        android:layout_height="54dp"
        android:text="TextView"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/card_btc_placeholder"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/card_eth_value"
        android:layout_width="136dp"
        android:layout_height="53dp"
        android:text="TextView"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/card_btc_value"
        app:layout_constraintLeft_toRightOf="@+id/card_eth_placeholder"
        android:layout_marginLeft="16dp" />
</android.support.constraint.ConstraintLayout>