<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/card_country_name"
        android:layout_width="276dp"
        android:layout_height="150dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/card_btc_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BITCOIN"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/card_country_name"
        app:layout_constraintRight_toLeftOf="@+id/card_btc_value"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.509" />

    <TextView
        android:id="@+id/card_btc_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/card_country_name"
        android:layout_marginEnd="54dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="54dp" />

    <TextView
        android:id="@+id/card_eth_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="ETHEREUM"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toLeftOf="@+id/card_eth_value"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/card_btc_placeholder"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="81dp"
        app:layout_constraintTop_toBottomOf="@+id/card_btc_placeholder" />

    <TextView
        android:id="@+id/card_eth_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="81dp"
        app:layout_constraintTop_toBottomOf="@+id/card_btc_value"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/card_btc_value"
        app:layout_constraintBottom_toBottomOf="@+id/card_btc_placeholder"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>