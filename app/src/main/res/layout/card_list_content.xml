<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="347dp"
        android:layout_height="432dp"
        android:layout_margin="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.316"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
            android:id="@+id/card_linear"
            android:orientation="vertical"
            android:layout_width="276dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            android:layout_marginStart="54dp"
            app:layout_constraintLeft_toLeftOf="parent" >

            <android.support.v7.widget.AppCompatImageView
            android:id="@+id/card_country_flag"
            android:layout_width="200dp"
            android:layout_height="100dp" />

            <TextView
            android:id="@+id/card_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="25sp"/>

            </LinearLayout>


            <TextView
            android:id="@+id/card_eth_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
                android:textSize="25sp"
                android:textStyle="bold"
            android:text="ETHEREUM"
            android:layout_marginStart="28dp"
            app:layout_constraintRight_toLeftOf="@+id/card_eth_value"
            android:layout_marginRight="65dp"
                android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/card_btc_placeholder"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.56" />

            <TextView
                android:id="@+id/card_btc_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="25sp"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/card_linear"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="98dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/card_eth_placeholder"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.677" />

            <TextView
            android:id="@+id/card_eth_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="54dp"
            app:layout_constraintTop_toBottomOf="@+id/card_btc_value"
            android:layout_marginStart="54dp"
            app:layout_constraintRight_toRightOf="@+id/card_btc_value"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.027" />

            <TextView
            android:id="@+id/card_btc_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
                android:textStyle="bold"
                android:textSize="25sp"
            android:text="BITCOIN"
                app:layout_constraintRight_toLeftOf="@+id/card_btc_value"
            app:layout_constraintTop_toBottomOf="@+id/card_linear"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                app:layout_constraintLeft_toLeftOf="@+id/card_linear"
                app:layout_constraintHorizontal_bias="0.357" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bitcoin_symbol"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/card_eth_placeholder"
                app:layout_constraintRight_toLeftOf="@+id/card_btc_placeholder"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/card_linear"
                app:layout_constraintBottom_toBottomOf="@+id/card_eth_placeholder"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.116" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/eth_symbol"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.75"
                android:layout_marginTop="45dp"
                app:layout_constraintTop_toBottomOf="@+id/card_btc_placeholder" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>